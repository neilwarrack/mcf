#!/usr/bin/env python3
# encoding: utf-8

import argparse
import subprocess

from stow import adopt_as
from git_repository import GitRepository
from install import only


@only('ubuntu')
def install():
    with GitRepository('arybczak/ncmpcpp') as repo:
        cmd = ('./autogen.sh '
               '--enable-clock '
               '--enable-outputs '
               '--enable-unicode '
               '--enable-visualizer '
               '--with-curl '
               '--with-taglib')
        subprocess.call(cmd.split())
        subprocess.call(['make'])
        subprocess.call(['make', '-C', 'extras'])
        subprocess.call(['sudo', 'make', 'install'])
        adopt_as('ncmpcpp')


def is_installed():
    return subprocess.call(['bash', '-c', 'hash ncmpcpp']) == 0


if __name__ == '__main__':
    parser = argparse.ArgumentParser(description='''
    Install NCMPCPP from source.
    ''', formatter_class=argparse.RawDescriptionHelpFormatter)
    parser.add_argument('--reinstall', action='store_true',
                        help='reinstall if already installed')
    args = parser.parse_args()
    if not args.reinstall and is_installed():
        print('NCMPCPP is already installed. '
              'Pass --reinstall to force reinstallation.')
    else:
        install()
