#!/usr/bin/env python3
# encoding: utf-8

import argparse
import subprocess

from stow import adopt_as
from git_repository import GitRepository
from install import only


@only('ubuntu')
def install():
    with GitRepository('tmux/tmux') as repo:
        subprocess.call(['sh', 'autogen.sh'])
        subprocess.call(['./configure'])
        subprocess.call(['make'])
        subprocess.call(['sudo', 'make', 'install'])
        adopt_as('tmux')


def is_installed():
    # This does not account for system version
    return subprocess.call(['bash', '-c', 'hash tmux']) == 0


if __name__ == '__main__':
    parser = argparse.ArgumentParser(description='''
    Install Tmux from source.
    ''', formatter_class=argparse.RawDescriptionHelpFormatter)
    parser.add_argument('--reinstall', action='store_true',
                        help='reinstall if tmux is already installed')
    args = parser.parse_args()
    if not args.reinstall and is_installed():
        print('Tmux is already installed. '
              'Pass --reinstall to force reinstallation.')
    else:
        install()

