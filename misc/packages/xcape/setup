#!/usr/bin/env python3
# encoding: utf-8

import os
import os.path
import argparse

from filesystem import link


def setup():
    home = os.path.expanduser('~')
    path, fl = os.path.split(os.path.realpath(__file__))
    src = os.path.join(path, 'src', 'xcape.desktop')
    tgt = os.path.join(home, '.config/autostart/xcape.desktop')
    link(src, tgt, 'Xcape autostart entry')


if __name__ == '__main__':
    parser = argparse.ArgumentParser(description='''
    Setup xcape. This adds the program to autostart.
    ''', formatter_class=argparse.RawDescriptionHelpFormatter)
    args = parser.parse_args()
    setup()
