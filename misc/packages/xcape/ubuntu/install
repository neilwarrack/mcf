#!/usr/bin/env python3
# encoding: utf-8

import argparse
import subprocess

from stow import adopt_as
from git_repository import GitRepository


def install():
    with GitRepository('alols/xcape') as repo:
        # Change installation path to /usr/local
        _replace('s/\/usr/\/usr\/local/', 'Makefile')
        subprocess.call(['make'])
        subprocess.call(['sudo', 'make', 'install'])
        adopt_as('xcape')


def is_installed():
    return subprocess.call(['bash', '-c', 'hash xcape']) == 0


def _replace(e, f):
    cmd = ['sed', '-i', '-e', e, f]
    subprocess.call(cmd)


if __name__ == '__main__':
    parser = argparse.ArgumentParser(description='''
    Install xcape from source.
    ''', formatter_class=argparse.RawDescriptionHelpFormatter)
    parser.add_argument('--reinstall', action='store_true',
                        help='reinstall if the font is already installed')
    args = parser.parse_args()
    if not args.reinstall and is_installed():
        print('Xcape is already installed. '
              'Pass --reinstall to force reinstallation.')
    else:
        install()
