#!/usr/bin/env python3
# encoding: utf-8

import os
import hashlib
import argparse
from getpass import getpass
from os.path import expanduser, split, realpath, join

from filesystem import link


def setup():
    home = expanduser('~')
    path, fl = split(os.path.realpath(__file__))
    src = join(path, 'src', 'mpdas.desktop')
    tgt = join(home, '.config/autostart/mpdas.desktop')
    link(src, tgt, 'MPDAS autostart entry')
    username = input("Enter username: ")
    passwd = getpass('Enter password: ')
    config = join(home, '.mpdasrc')
    with open(config, 'w') as f:
        h = hashlib.md5(str(passwd).encode('ascii')).hexdigest()
        f.writelines('username: {}\npassword: {}'.format(username, h))
    os.chmod(config, 0O600)


if __name__ == '__main__':
    parser = argparse.ArgumentParser(description='''
    Setup mpdas. This adds the program to autostart and creates config file.
    ''', formatter_class=argparse.RawDescriptionHelpFormatter)
    args = parser.parse_args()
    setup()
