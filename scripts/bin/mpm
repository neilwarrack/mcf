#!/usr/bin/env python
# encoding: utf-8

import click

import package_manager


@click.command()
@click.argument('package', type=str)
@click.option('--reinstall', help='force reinstallation')
def install(package, reinstall):
    """Install a package."""
    click.echo('pac name: {}'.format(package))
    package_manager.install(package, verbose=True)


if __name__ == '__main__':
    install()
